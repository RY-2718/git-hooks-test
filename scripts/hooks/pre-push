#!/bin/sh

# „É™„É™„Éº„Çπ„Çø„Ç∞„ÅÆpushÊôÇ„Å´CHANGELOG.md„Å´[Unreleased]„Çª„ÇØ„Ç∑„Éß„É≥„ÅåÊÆã„Å£„Å¶„ÅÑ„Å™„ÅÑ„Åã„ÉÅ„Çß„ÉÉ„ÇØ„Åó„Åæ„Åô
# Ê≠£Âºè„Å™„Çª„Éû„É≥„ÉÜ„Ç£„ÉÉ„ÇØ„Éê„Éº„Ç∏„Éß„Éã„É≥„Ç∞ÔºàvX.Y.ZÔºâ„ÅÆ„Åø„ÉÅ„Çß„ÉÉ„ÇØÂØæË±°„Å®„Åó„Åæ„Åô

remote="$1"
url="$2"

echo "üè∑Ô∏è  Pre-push hook started"

while read local_ref local_oid remote_ref remote_oid
do
    # Ê≠£Âºè„Å™„Çª„Éû„É≥„ÉÜ„Ç£„ÉÉ„ÇØ„Éê„Éº„Ç∏„Éß„Éã„É≥„Ç∞„ÅÆ„Çø„Ç∞„ÅÆ„Åø„ÉÅ„Çß„ÉÉ„ÇØÔºàbeta/rc„ÅØÈô§Â§ñÔºâ
    if echo "$local_ref" | grep -q "refs/tags/v[0-9]\+\.[0-9]\+\.[0-9]\+$"; then
        tag_name=$(echo "$local_ref" | sed 's|refs/tags/||')
        echo "üè∑Ô∏è  Release tag detected: $tag_name"

        # „ÉØ„Éº„ÇØ„ÉÑ„É™„Éº„Å´Êú™„Ç≥„Éü„ÉÉ„Éà„ÅÆÂ§âÊõ¥„Åå„ÅÇ„Çã„Åã„ÉÅ„Çß„ÉÉ„ÇØ
        if ! git diff --quiet CHANGELOG.md 2>/dev/null; then
            echo "‚ùå Error: CHANGELOG.md has uncommitted changes!"
            echo "   Please commit your CHANGELOG.md changes before releasing $tag_name"
            echo ""
            echo "üí° Tip: Run 'git add CHANGELOG.md && git commit -m \"Update CHANGELOG for $tag_name\"'"
            exit 1
        fi

        # „Ç§„É≥„Éá„ÉÉ„ÇØ„Çπ„Å´„Çπ„ÉÜ„Éº„Ç∏„Åï„Çå„ÅüÂ§âÊõ¥„Åå„ÅÇ„Çã„Åã„ÉÅ„Çß„ÉÉ„ÇØ
        if ! git diff --cached --quiet CHANGELOG.md 2>/dev/null; then
            echo "‚ùå Error: CHANGELOG.md has staged changes!"
            echo "   Please commit your staged CHANGELOG.md changes before releasing $tag_name"
            echo ""
            echo "üí° Tip: Run 'git commit -m \"Update CHANGELOG for $tag_name\"'"
            exit 1
        fi

        # [Unreleased]„Çª„ÇØ„Ç∑„Éß„É≥„ÅåÂ≠òÂú®„Åó„Å™„ÅÑ„Åã„ÉÅ„Çß„ÉÉ„ÇØ
        if grep -q "^## \[Unreleased\]" CHANGELOG.md 2>/dev/null; then
            echo "‚ùå Error: [Unreleased] section still exists in CHANGELOG.md!"
            echo "   Please update CHANGELOG.md before releasing $tag_name"
            echo ""
            echo "üí° Tip: Move content from [Unreleased] to [$tag_name] section"
            echo "   Example:"
            echo "   ## [Unreleased]"
            echo "   - Feature A"
            echo "   - Bug fix B"
            echo ""
            echo "   Change to:"
            echo "   ## [$tag_name] - $(date +%Y-%m-%d)"
            echo "   - Feature A"
            echo "   - Bug fix B"
            exit 1
        fi

        # „Çø„Ç∞Âêç„Å´ÂØæÂøú„Åô„Çã„Çª„ÇØ„Ç∑„Éß„É≥„ÅåÂ≠òÂú®„Åô„Çã„Åã„ÉÅ„Çß„ÉÉ„ÇØ
        if ! grep -q "^## \[$tag_name\]" CHANGELOG.md 2>/dev/null; then
            echo "‚ö†Ô∏è  Warning: [$tag_name] section not found in CHANGELOG.md"
            echo "   Consider adding a section for this release"
            exit 1
        fi

        echo "‚úÖ CHANGELOG.md validation passed for $tag_name"
    fi
done

exit 0
